# Healthcare AI Live2D System - Environment Configuration Template
# Copy this file to config.env and update the values for your deployment

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment name (dev, staging, prod)
ENVIRONMENT=dev

# AWS Region for deployment
AWS_REGION=us-east-1

# CloudFormation stack name
STACK_NAME=healthcare-ai-live2d

# Email address for cost alerts (REQUIRED)
COST_ALERT_EMAIL=your-email@example.com

# Cost threshold in USD for alerts
COST_THRESHOLD=20

# =============================================================================
# AWS BEDROCK CONFIGURATION
# =============================================================================

# Bedrock model IDs for different complexity levels
BEDROCK_MODEL_FAST=amazon.titan-text-lite-v1
BEDROCK_MODEL_BALANCED=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MODEL_ADVANCED=anthropic.claude-3-sonnet-20240229-v1:0

# Default model complexity (fast, balanced, advanced)
DEFAULT_MODEL_COMPLEXITY=balanced

# Maximum tokens for AI responses
MAX_TOKENS=1000

# =============================================================================
# SPEECH SERVICES CONFIGURATION
# =============================================================================

# AWS Transcribe language codes
TRANSCRIBE_LANGUAGE_EN=en-US
TRANSCRIBE_LANGUAGE_ZH=zh-CN

# AWS Polly voice IDs for different agents and languages
POLLY_VOICE_ILLNESS_MONITOR_EN=Joanna
POLLY_VOICE_ILLNESS_MONITOR_ZH=Zhiyu
POLLY_VOICE_MENTAL_HEALTH_EN=Amy
POLLY_VOICE_MENTAL_HEALTH_ZH=Zhiyu
POLLY_VOICE_SAFETY_GUARDIAN_EN=Matthew
POLLY_VOICE_SAFETY_GUARDIAN_ZH=Kangkang
POLLY_VOICE_WELLNESS_COACH_EN=Kimberly
POLLY_VOICE_WELLNESS_COACH_ZH=Zhiyu

# =============================================================================
# DYNAMODB CONFIGURATION
# =============================================================================

# TTL settings (in days)
CONVERSATION_TTL_DAYS=30
HONGKONG_DATA_TTL_DAYS=7
TEMP_DATA_TTL_DAYS=1

# Query limits
MAX_CONVERSATION_HISTORY=10
MAX_SEARCH_RESULTS=20

# =============================================================================
# S3 CONFIGURATION
# =============================================================================

# S3 lifecycle policies (in days)
TEMP_FILES_EXPIRY_DAYS=1
STANDARD_IA_TRANSITION_DAYS=30
GLACIER_TRANSITION_DAYS=90

# Maximum file upload size (in MB)
MAX_UPLOAD_SIZE_MB=10

# Allowed file types for uploads
ALLOWED_FILE_TYPES=pdf,jpg,jpeg,png,txt,doc,docx

# =============================================================================
# LAMBDA CONFIGURATION
# =============================================================================

# Lambda timeout settings (in seconds)
AGENT_TIMEOUT=30
SPEECH_TIMEOUT=60
FILE_PROCESSING_TIMEOUT=300

# Lambda memory settings (in MB)
AGENT_MEMORY=512
SPEECH_MEMORY=1024
FILE_PROCESSING_MEMORY=1024

# Reserved concurrency limits
AGENT_CONCURRENCY=5
ROUTER_CONCURRENCY=10
SPEECH_CONCURRENCY=3
FILE_PROCESSING_CONCURRENCY=2

# =============================================================================
# HEALTHCARE AGENT CONFIGURATION
# =============================================================================

# Agent-specific settings
ILLNESS_MONITOR_AVATAR=Hiyori
MENTAL_HEALTH_AVATAR=Xiaoxing
SAFETY_GUARDIAN_AVATAR=Guardian
WELLNESS_COACH_AVATAR=Coach

# Emergency keywords for Safety Guardian (comma-separated)
EMERGENCY_KEYWORDS_EN=emergency,help,urgent,crisis,suicide,harm
EMERGENCY_KEYWORDS_ZH=緊急,救命,危機,自殺,傷害,幫助

# Hong Kong emergency contacts
HK_EMERGENCY_POLICE=999
HK_EMERGENCY_AMBULANCE=999
HK_EMERGENCY_FIRE=999
HK_SUICIDE_PREVENTION=2382-0000
HK_MENTAL_HEALTH_HOTLINE=2772-0047

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# CloudWatch log retention (in days)
LOG_RETENTION_DAYS=14

# Enable detailed monitoring (true/false)
ENABLE_DETAILED_MONITORING=true

# Enable X-Ray tracing (true/false)
ENABLE_XRAY_TRACING=false

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# CORS allowed origins (comma-separated)
CORS_ALLOWED_ORIGINS=*

# API rate limiting
API_RATE_LIMIT_PER_MINUTE=60
API_BURST_LIMIT=100

# Cache settings
CLOUDFRONT_CACHE_TTL_SECONDS=3600
API_CACHE_TTL_SECONDS=300

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable debug mode (true/false)
DEBUG_MODE=false

# Test data settings
CREATE_TEST_DATA=false
TEST_USER_ID=test-user-123

# Local development settings
LOCAL_DEVELOPMENT=false
LOCAL_API_PORT=8000
LOCAL_FRONTEND_PORT=3000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Enable encryption at rest (true/false)
ENABLE_ENCRYPTION=true

# Enable VPC endpoints (true/false)
ENABLE_VPC_ENDPOINTS=false

# IP whitelist for admin functions (comma-separated CIDR blocks)
ADMIN_IP_WHITELIST=0.0.0.0/0

# =============================================================================
# BACKUP AND DISASTER RECOVERY
# =============================================================================

# Enable point-in-time recovery for DynamoDB (true/false)
ENABLE_PITR=true

# Enable versioning for S3 buckets (true/false)
ENABLE_S3_VERSIONING=false

# Backup retention period (in days)
BACKUP_RETENTION_DAYS=30

# =============================================================================
# USAGE NOTES
# =============================================================================

# 1. Copy this file to config.env and update the values
# 2. Source the config file before running deployment scripts:
#    source config.env && ./deploy.sh
# 3. Required fields: COST_ALERT_EMAIL
# 4. Recommended to change: STACK_NAME, AWS_REGION for production
# 5. All other values have sensible defaults for development

# =============================================================================
# EXAMPLE USAGE
# =============================================================================

# Development deployment:
# cp config.env.template config.env
# # Edit config.env with your email
# source config.env && ./deploy.sh

# Production deployment:
# cp config.env.template config.prod.env
# # Edit config.prod.env with production values
# source config.prod.env && ./deploy.sh --environment prod