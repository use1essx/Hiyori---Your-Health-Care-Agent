# Healthcare AI V2 + Live2D Unified System
# Environment Configuration Template
# Copy this file to .env and update with your values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_NAME=healthcare_ai_v2
DATABASE_USER=admin
DATABASE_PASSWORD=healthcare_ai_2025
DATABASE_HOST=postgres
DATABASE_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Get your OpenRouter API key from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your_openrouter_api_key_here

# Application secret key (change in production)
SECRET_KEY=healthcare_ai_v2_unified_secret_key_change_in_production

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# Service Ports
HEALTHCARE_AI_PORT=8000
LIVE2D_PORT=8080
PGADMIN_PORT=5050
STT_PORT=8790

# =============================================================================
# LIVE2D CONFIGURATION
# =============================================================================
ENABLE_LIVE2D=true
DEFAULT_LIVE2D_MODEL=Hiyori
LIVE2D_MODELS_PATH=/app/src/web/live2d/Samples/TypeScript/Demo/dist/Resources

# =============================================================================
# SPEECH-TO-TEXT CONFIGURATION
# =============================================================================
ENABLE_STT=false
STT_MODEL=tiny
STT_LANGUAGE=en

# =============================================================================
# PGADMIN CONFIGURATION
# =============================================================================
PGADMIN_EMAIL=admin@healthcare-ai.com
PGADMIN_PASSWORD=healthcare_ai_2025

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_ADMIN_INTERFACE=true
ENABLE_API_DOCS=true
ENABLE_HEALTH_CHECKS=true
ENABLE_SECURITY_MONITORING=true
ENABLE_BACKGROUND_TASKS=true

# =============================================================================
# HONG KONG DATA PIPELINE
# =============================================================================
HK_DATA_UPDATE_INTERVAL=3600
HK_DATA_CACHE_TTL=1800
HK_DATA_RETRY_ATTEMPTS=3

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
MAX_LOGIN_ATTEMPTS=5
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","http://localhost:8000"]

# =============================================================================
# DEVELOPMENT ONLY
# =============================================================================
# These should be disabled in production
ENABLE_DEBUG_TOOLBAR=false
LOG_DATABASE_QUERIES=false
